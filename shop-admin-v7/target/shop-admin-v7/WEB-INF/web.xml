<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <!-- 通过contextLoaderListener来加载spring的配置文件 -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      classpath:spring/spring-common.xml
    </param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <!-- 处理中文乱码 -->
  <filter>
    <filter-name>v</filter-name>
    <filter-class>
      org.springframework.web.filter.CharacterEncodingFilter
    </filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>v</filter-name>
    <url-pattern>*.jhtml</url-pattern>
  </filter-mapping>

  <!-- filter -->
  <filter>
    <filter-name>filter</filter-name>
    <filter-class>com.fh.admin.commons.WebContextFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>filter</filter-name>
    <url-pattern>*.jhtml</url-pattern>
  </filter-mapping>

  <!-- springMVC的前端总控制器 DispatcherServlet-->
  <servlet>
    <servlet-name>w</servlet-name>
    <servlet-class>
      org.springframework.web.servlet.DispatcherServlet
    </servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
        classpath:spring/spring-mvc.xml
      </param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>w</servlet-name>
    <url-pattern>*.jhtml</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>imgCode</servlet-name>
    <servlet-class>com.fh.admin.servlet.ImageCodeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imgCode</servlet-name>
    <url-pattern>/img/code</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>log.jsp</welcome-file>
  </welcome-file-list>
</web-app>
